<Window x:Name="frmMain1" x:Class="DupeFileCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DupeFileCleaner"
        mc:Ignorable="d"
        Title="MainWindow" Height="636" Width="919">
    <Grid x:Name="frmMain" Visibility="Visible" Margin="0,0,0,-6" Background="#FF212121">
        <Button x:Name="btnFolderSelect" Content="Select Directory" HorizontalAlignment="Left" Margin="400,38,0,0" VerticalAlignment="Top" Click="btnFolderSelect_Click" Background="#FF212121" Foreground="#FFD6D6D6" RenderTransformOrigin="0.5,0.5" Padding="10,5,10,5" BorderThickness="2,2,2,2" FontSize="14"/>
        <Button x:Name="btnScan" Content="Scan" HorizontalAlignment="Left" Margin="531,38,0,0" VerticalAlignment="Top" Click="btnScan_Click" Background="#FF212121" Foreground="#FFDADADA" Padding="10,5,10,5" BorderThickness="2,2,2,2" FontSize="14"/>
        <TextBox x:Name="txtSelectedFolder" HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="381" Height="28" Background="#FF444444" Foreground="#FFD4D4D4"/>
        <TreeView x:Name="tvMatches" Margin="176,133,18,31" Background="#FF444444" Foreground="#FFD6D4D4" FontSize="14"/>
        <Label x:Name="lbDupsFound" Content="Duplicates Found:" HorizontalAlignment="Left" Margin="12,186,0,0" VerticalAlignment="Top" Width="104" Foreground="#FFD4D4D4"/>
        <Label x:Name="lblStatus" Content="Waiting on Scan" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Foreground="#FFE2D9D9" Width="153" BorderBrush="#FF565353" Background="#FF4A4545"/>
        <ProgressBar x:Name="prgbrScan" HorizontalAlignment="Left" Height="28" Margin="176,90,0,0" VerticalAlignment="Top" Width="725" Foreground="#FF1F5228" BorderBrush="#FF707070" Background="#FFBBBBBB" BorderThickness="2,2,2,2"/>
        <Label x:Name="lblDupFoundCt" HorizontalAlignment="Left" Margin="135,186,0,0" VerticalAlignment="Top" Foreground="#FFD2CFCF" Height="23" Width="28" Content="0"/>
        <Label x:Name="lblDirScanned" Content="Directories Scanned:" HorizontalAlignment="Left" Margin="12,134,0,0" VerticalAlignment="Top" Foreground="#FFD4D0D0"/>
        <Label x:Name="lblDirScannedCt" Content="0" HorizontalAlignment="Left" Margin="135,134,0,0" VerticalAlignment="Top" Foreground="#FFC7C3C3" Width="56"/>
        <Label Content="Files Scanned:" HorizontalAlignment="Left" Margin="12,160,0,0" VerticalAlignment="Top" Foreground="#FFD4D0D0"/>
        <Label x:Name="lblFilesScannedCt" Content="0" HorizontalAlignment="Left" Margin="135,160,0,0" VerticalAlignment="Top" Foreground="#FFCEC9C9"/>
        <Label x:Name="lblScanningNow" Content="" Margin="176,92,18,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFE8E5E5"/>

    </Grid>
</Window>
