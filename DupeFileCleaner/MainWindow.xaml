<Window x:Class="DupeFileCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DupeFileCleaner"
        mc:Ignorable="d"
        Title="MainWindow" Height="593" Width="800">
    <Grid x:Name="frmMain" Visibility="Visible" Margin="0,0,0,19">
        <Button x:Name="btnFolderSelect" Content="Select Directory" HorizontalAlignment="Left" Margin="400,38,0,0" VerticalAlignment="Top" Click="btnFolderSelect_Click"/>
        <Button x:Name="btnScan" Content="Scan" HorizontalAlignment="Left" Margin="506,38,0,0" VerticalAlignment="Top" Click="btnScan_Click"/>
        <TextBox x:Name="txtSelectedFolder" HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="381" Height="20"/>
        <DataGrid x:Name="dtaFoundFiles" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,63,10,10" MinColumnWidth="17" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select"/>
                <DataGridTextColumn Header="File Name" Width="500" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
